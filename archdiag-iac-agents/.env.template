# ================================
# Azure AI Foundry Configuration
# ================================
# Get from: Azure AI Foundry portal -> Project -> Overview
AZURE_AI_PROJECT_ENDPOINT=https://your-project.api.azureml.ms
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o
# Leave empty to use DefaultAzureCredential (az login)
AZURE_AI_API_KEY=

# ================================
# Azure Computer Vision Configuration
# ================================
# Get from: Azure Portal -> Computer Vision -> Keys and Endpoint
AZURE_COMPUTER_VISION_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_COMPUTER_VISION_KEY=
# Or use managed identity (preferred)
# Leave key empty to use DefaultAzureCredential

# ================================
# Azure Subscription & Deployment
# ================================
# Get from: az account show --query id -o tsv
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000
# Default resource group for deployments
AZURE_RESOURCE_GROUP=rg-archdiag-iac
# Default location for resources
AZURE_LOCATION=eastus

# ================================
# Application Configuration
# ================================
# API Server settings
API_HOST=0.0.0.0
API_PORT=8000

# Upload settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=.png,.jpg,.jpeg,.bmp,.tiff

# Workflow settings
ENABLE_AUTO_DEPLOY=false
REQUIRE_REVIEW_APPROVAL=true

# ================================
# Logging & Monitoring (Optional)
# ================================
# Azure Monitor Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
