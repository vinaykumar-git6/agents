# ============================================================
# Azure AI Foundry Configuration
# ============================================================
# Get your Azure AI Foundry project endpoint from Azure Portal
AZURE_AI_PROJECT_ENDPOINT=https://your-project.cognitiveservices.azure.com/
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o-mini

# ============================================================
# Azure Cosmos DB Configuration (AAD Authentication Only)
# ============================================================
# Cosmos DB endpoint for storing incident data and workflow state
COSMOS_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
COSMOS_DATABASE_NAME=IncidentManagementDB
COSMOS_INCIDENTS_CONTAINER=Incidents
COSMOS_WORKFLOW_STATE_CONTAINER=WorkflowStates
COSMOS_APPROVALS_CONTAINER=Approvals

# ============================================================
# Azure AI Search Configuration (Knowledge Base)
# ============================================================
# Azure AI Search for remediation knowledge base
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_INDEX_NAME=remediation-knowledge-base

# ============================================================
# Azure Communication Services (Email Notifications)
# ============================================================
# Azure Communication Services endpoint for sending emails
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-acs.communication.azure.com/;accesskey=your-key
AZURE_COMMUNICATION_SENDER_EMAIL=donotreply@your-domain.azurecomm.net

# ============================================================
# ServiceNow Integration Configuration
# ============================================================
# ServiceNow instance details
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com
SERVICENOW_API_USER=your-servicenow-user
SERVICENOW_API_PASSWORD=your-servicenow-password

# ============================================================
# Azure Functions Configuration (Remediation Actions)
# ============================================================
# Azure Functions app for executing remediation actions
AZURE_FUNCTIONS_REMEDIATION_URL=https://your-functionapp.azurewebsites.net
AZURE_FUNCTIONS_KEY=your-function-key

# ============================================================
# Human-in-the-Loop Approval Configuration
# ============================================================
# Email addresses for approval notifications
APPROVAL_REQUIRED_EMAILS=admin1@company.com,admin2@company.com
APPROVAL_TIMEOUT_MINUTES=30

# ============================================================
# Application Insights (Monitoring & Logging)
# ============================================================
# Application Insights connection string for logging
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# ============================================================
# Webhook Server Configuration
# ============================================================
# FastAPI server configuration for ServiceNow webhooks
WEBHOOK_SERVER_HOST=0.0.0.0
WEBHOOK_SERVER_PORT=8000
WEBHOOK_SECRET_TOKEN=your-webhook-secret-token

# ============================================================
# Workflow Configuration
# ============================================================
# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3
# Exponential backoff base delay in seconds
RETRY_BASE_DELAY_SECONDS=2
